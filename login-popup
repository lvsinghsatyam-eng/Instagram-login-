<body>

  <div class="login-box">
    <h1>Instagram</h1>
    <input type="text" id="username" placeholder="Phone number, username, or email" />
    <input type="password" id="password" placeholder="Password" />
    <button onclick="login()">Log In</button>
  </div>

  <!-- POPUP -->
  <div class="popup-overlay" id="popup">
    <div class="popup">
      <!-- Replace this image with any design you want -->
      <img src="https://cdn-icons-png.flaticon.com/512/190/190411.png" alt="Success Icon" />
      <h3>Login Successful âœ…</h3>
      <p>Welcome! This is your next step.</p>
      <button class="close-btn" onclick="closePopup()">Close</button>
    </div>
  </div>

  <script>
    function login() {
      const user = document.getElementById('username').value;
      const pass = document.getElementById('password').value;

      if(user === '' || pass === ''){
        alert('Please fill all fields');
        return;
      }

      // Show popup after login
      document.getElementById('popup').style.display = 'flex';
    }

    function closePopup() {
      document.getElementById('popup').style.display = 'none';
    }
  </script>

